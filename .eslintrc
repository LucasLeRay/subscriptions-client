{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": ["react-app", "airbnb"],
  "plugins": ["react-hooks"],
  "parser": "babel-eslint",
  "rules": {
    "no-negated-condition": 2,
    "no-console": [
      1,
      {
        "allow": ["warn", "error"]
      }
    ],
    "max-len": [2, 80],
    "semi": [1, "never"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js"]
      }
    ],
    "import/no-cycle": 0
  }
}
